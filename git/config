[include]
    path = .gitconfig.local
[core]
    editor = emacs
    pager  = lv
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = .gitignore
[color]
    ui = always
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[branch]
    autosetupmerge = true
[alias]
    st   = status
    ci   = commit
    br   = branch
    co   = checkout
    df   = diff
    lg   = log -p
    url  = config --get remote.origin.url
    tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    wt   = whatchanged --stat
    edit-unmerged = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; emacs `f`"
    add-unmerged  = "!f() { git ls-files --unmerged | cut -f2 | sort -u ; }; git add `f`"
[push]
    default = current
[pull]
    default = current
[rerere]
    enabled = true
