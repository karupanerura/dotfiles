#!/bin/sh
set -e
# set -x

in_tree=`git rev-parse --is-inside-work-tree`;
if [ "$in_tree" = "true" ]; then
    gitdir=`git rev-parse --git-dir`
    if [ -d $gitdir ]; then
        logfile=$gitdir/info/.branch.log
        test -d $gitdir/info || mkdir $gitdir/info
        test -f $logfile     || touch $logfile
        tail "$@" $logfile
    fi
fi
